<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:orientation="vertical">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/backimght"
      >

        <ImageView
            android:id="@+id/backimg"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/backimght"
         />

        <RelativeLayout
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:paddingBottom="20dp"

            android:layout_alignParentRight="true">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cross"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        >

        <com.inkswipe.SocialSociety.MyTextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:textSize="12sp"
            android:text="Rajeshwar nagar"/>

        <com.inkswipe.SocialSociety.MyTextView
            android:id="@+id/societynametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/txt"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:text="Rajeshwar nagar"/>

        <com.inkswipe.SocialSociety.MyTextView
            android:id="@+id/societycitytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/societynametxt"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:text="Rajeshwar nagar"/>

        <com.inkswipe.SocialSociety.MyTextView
            android:id="@+id/citytxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#222222"
            android:layout_toRightOf="@+id/txt"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="Mumbai"/>

        <ImageView
            android:id="@+id/editimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@mipmap/editb"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="bottom"
        android:background="@android:color/darker_gray"/>


</LinearLayout>
