<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.inkswipe.SocialSociety.ForgetPassword"
    tools:showIn="@layout/activity_forget_password"
    android:orientation="vertical"
    android:background="#ffffff">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/scroll_bar_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <com.inkswipe.SocialSociety.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your email address below. We will sent you an OTP to reset your password."
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_forget"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"/>

    <com.inkswipe.SocialSociety.MyEditTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:textColor="@android:color/black"
        android:textColorHint="@color/color_hint"
        android:layout_marginTop="@dimen/login_edittext_top"
        android:textSize="@dimen/text_size" />

    <LinearLayout
        android:id="@+id/resetpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fourborder"
        android:gravity="center"
        android:layout_marginTop="@dimen/login_button_top">

        <com.inkswipe.SocialSociety.MyTextView
            android:id="@+id/sendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:padding="@dimen/button_padding"/>

    </LinearLayout>

    <com.inkswipe.SocialSociety.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp" />
    <LinearLayout
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fourborderregister"
        android:gravity="center">

        <com.inkswipe.SocialSociety.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:padding="@dimen/button_padding"/>

    </LinearLayout>

</LinearLayout>
    </ScrollView>

</LinearLayout>
