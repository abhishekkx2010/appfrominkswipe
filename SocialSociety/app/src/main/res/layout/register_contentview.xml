<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name *"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:maxLength="100"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Id *"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:visibility="gone"
            android:imeOptions="actionNext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/emailvd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Id *"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:singleLine="true"
            android:visibility="gone"
            android:clickable="false"
            android:editable="false"
            android:imeOptions="actionNext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/verifymailid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Verify your email id"
            android:textColor="@color/color_primary"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password *"
            android:maxLength="40"
            android:singleLine="true"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/conpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password *"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:singleLine="true"
            android:maxLength="40"
            android:imeOptions="actionNext"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"

            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No. *"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:maxLength="10"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <EditText
            android:id="@+id/mobilevd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No. *"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:maxLength="10"
            android:singleLine="true"
            android:visibility="gone"
            android:imeOptions="actionNext"
            android:clickable="false"
            android:editable="false"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/verifydialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Verify your mobile number"
            android:textColor="@color/color_primary"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:layout_marginRight="15dp"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinnerht"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/dwnarr"
            android:hint="Gender"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:layout_marginRight="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewht"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"

            android:background="@android:color/darker_gray"
            />




        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:maxLength="100"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />


        <EditText
            android:id="@+id/landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:maxLength="50"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinnerht"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:layout_marginLeft="19dp"
            android:gravity="center_vertical"
            android:hint="State"
            android:onClick="onClickList"
            android:drawableRight="@mipmap/dwnarr"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:layout_marginRight="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewht"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@android:color/darker_gray"
            />


        <TextView
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spinnerht"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:layout_marginLeft="19dp"
            android:drawableRight="@mipmap/dwnarr"
            android:gravity="center_vertical"
            android:hint="City"

            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            android:layout_marginRight="19dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"

            android:background="@android:color/darker_gray"
            />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@android:color/black"
            android:textColorHint="@color/color_hint"
            android:layout_marginTop="@dimen/login_edittext_top"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <LinearLayout
            android:id="@+id/lregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fourborderregister"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/login_button_top">

            <TextView
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preview"
                android:textSize="@dimen/text_size"
                android:textStyle="bold"
                android:padding="@dimen/button_padding"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
